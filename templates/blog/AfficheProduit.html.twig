{% extends 'base.html.twig' %}



{% block body %}
<title>{% block title %}La liste des produits {% endblock %}</title> 

  {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/base.css')}}"> 
        {% endblock %}

  <div class="container-border">
    <div class="row mt-5">
{% for produit in produits %}


      <div class="col-sm-4">
        <div class="card mb-4 box-shadow">
            <div class="card-body" aligh="center"> 
                <p class="font-weight-bold"align="center">N° : {{ produit.idproduit }} </p>
                 <p class="font-weight-bold" align="center">Nom : {{ produit.nomproduit }}</p>
                 <p class="font-weight-bold" align="center">Prix : {{ produit.prixproduit }} €</p>
                 <img src="{{produit.imageProduit}}" alt="" height="250" width="250" align="center">
                  <p class="card-text" align="center">{{ produit.descriptionproduit }}</p>
                  <div class="d-flex justify-content-between align-items-center">
                   {% if app.user %}
                    <div class="btn-group">
                       <a role="button" href ="{{ path('cart_add', {'idproduit' : produit.idproduit})}}" class="btn btn-outline-dark">Acheter</a>
                      </div> 
                    {% endif%}
                  </div>
            </div>
         </div>
    </div>



{% endfor %}
</div>
</div>


{% endblock %}
 