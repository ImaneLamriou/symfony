{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>
    
    {% if items | length > 0 %}
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                   <tr>
                        <td>{{ item.produit.nomproduit }}</td>
                        <td>{{ item.produit.prixproduit }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td class="lead">{{ item.produit.prixproduit * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('cart_remove', {'idproduit' : item.produit.idproduit}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trach">Supprimer</i>
                            </a>
                        </td>
                   </tr> 
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total : </td>
                    <td>{{ total }} €</td>
                    <td></td>
                    
        </table>
    {% else %}
    </br>
    <p class="lead">Surprise, c'est vide ! Pour le remplir il faut vous connecetez</p>
    {% endif %}

{% endblock %}